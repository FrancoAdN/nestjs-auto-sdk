{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "ES2020",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "declarationMap": true
  },
  "include": ["lib/**/*", "../index.ts"],
  "exclude": ["node_modules", "dist"]
}
